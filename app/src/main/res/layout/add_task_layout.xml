<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        >

        <TextView
            android:layout_width="match_parent"
            android:text="@string/add_task"
            android:textSize="35sp"
            android:layout_alignBottom="@+id/bt_addTask"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_addTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@android:string/ok"/>
        </RelativeLayout>

    <EditText
        android:id="@+id/et_taskName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:hint="@string/task_name"/>

    <EditText
        android:id="@+id/et_target"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:hint="@string/target"/>

    <EditText
        android:id="@+id/et_currentProgress"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:hint="@string/currentProgress"/>

</LinearLayout>